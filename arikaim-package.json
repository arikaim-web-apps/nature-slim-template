{      
    "title": "Nature Slim",
    "version": "1.0.1",
    "name": "nature-slim",
    "package-type": "template",
    "icon": "tree",
    "private-repository": true,
    "repository": "arikaim-web-apps/nature-slim-theme.git",
    "require": {
        "components": [
            "icons",
            "tailwind"
        ],
        "library": [
            "jquery",
            "arikaim",
            "arikaim-ui",
            "tailwind"
        ]
    },
    "routes": [
        {
            "path": "/",         
            "home": true,  
            "page": "home",
            "language-path": true,
            "name": "Home"                   
        },
        {
            "path": "/about",           
            "page": "about",
            "language-path": true,
            "name": "About"                   
        },
        {
            "path": "/contact-us",           
            "page": "contact-us",
            "language-path": true,
            "name": "contactUs"                   
        }
    ],
    "languages": [
        "en"      
    ],
    "themes": [
        "default"
    ],
    "thumbnail": "nature-slim-thumbnail.png",
    "default-theme": "default",
    "include": {     
        "components": [    
        ],           
        "css": [
            "preflight.css",
            "style.css",
            "tailwind.min.css"
        ],        
        "library": [
            "jquery",                                
            "arikaim",
            "arikaim-ui",
            "fomantic:form-validation"                                   
        ]       
    },
    "modules": {
    },
    "content": [
        {
            "key": "about.page",
            "title": "About page content",
            "type": "text"
        },
        {
            "key": "home.page.1",
            "title": "Home page content card 1",
            "type": "text"
        },
        {
            "key": "home.page.2",
            "title": "Home page content card 2",
            "type": "text"
        }
    ]
}